#!env pscript
import("service");

/* Where to look for the servlet */
runtime.servlet.path += ":out";

insmod("mem_pipe");
/* Listen to a TCP port */
insmod("tcp_pipe 12345");

/* Start the server */
Service.start({
	/* Declare a node */
	read_name := "getline";
	say_hello := @"say Hello";
	/* Define the pipes */
	() -> "in" read_name "line" -> "name" say_hello "out" -> ();
});
